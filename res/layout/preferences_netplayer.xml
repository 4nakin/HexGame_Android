<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferences">
        <PreferenceCategory
            android:key="netPlayerCategory"
            android:title="@string/preferences_title_options" >
            <EditTextPreference
                android:title="@string/netUsernameTitle"
                android:summary="@string/netUsernameSummary"
                android:key="netUsername"
                android:defaultValue="" />
            <EditTextPreference
                android:title="@string/netPasswordTitle"
                android:summary="@string/netPasswordSummary"
                android:key="visibleNetPassword"
                android:defaultValue=""
                android:inputType="textPassword" />
        </PreferenceCategory>
</PreferenceScreen>