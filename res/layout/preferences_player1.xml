<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferences">
    <PreferenceCategory
        android:title="@string/preferences_title_options" >
	    <EditTextPreference
	        android:title="@string/player1NameTitle"
	        android:summary="@string/player1NameSummary"
	        android:key="player1Name"
	        android:defaultValue="@string/DEFAULT_P1_NAME" />
	    <ListPreference
	        android:title="@string/player1TypeTitle"
	        android:summary="@string/player1TypeSummary"
	        android:key="player1Type"
	        android:defaultValue="@integer/DEFAULT_P1_ENTITY"
	        android:entries="@array/player1Array"
	        android:entryValues="@array/player1Values" />
	    <net.margaritov.preference.colorpicker.ColorPickerPreference
	        android:title="@string/player1ColorTitle"
	        android:summary="@string/player1ColorSummary"
	        android:key="player1Color"
	        android:defaultValue="@integer/DEFAULT_P1_COLOR" />
    </PreferenceCategory>
</PreferenceScreen>